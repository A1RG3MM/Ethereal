<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EtherealOS</title>
    <style>
        @import url('https://api.fontshare.com/v2/css?f[]=chillax@300,400,500,600,700&display=swap');

        * {
            font-family: 'Chillax', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            height: 100vh;
            cursor: url("./assets/cursor.png"), auto;
            background-image: url('./assets/bg.png');
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            overflow: hidden;
            color: #FFF;
            animation: backgroundFadeIn 1s forwards;
        }

        #particles-js {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            /* Ensure particles are behind other elements */
        }

        .bg {
            background: linear-gradient(to bottom, #1e1e2fd5, #121212d5);
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            height: 100vh;
        }

        .clock {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 48px;
            font-weight: 600;
            text-align: center;
            background: linear-gradient(to top left, #241d3bae, #3d3658ae);
            backdrop-filter: blur(3px);
            padding: 15px;
            border-radius: 0.75vw;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-size: 2.5vw;
            width: 19vw;
            height: 13vh;
        }

        #date {
            font-size: 0.5em;
        }



        .bottom {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .toolbar {
            background: linear-gradient(to top, #241d3bae, #3d3658ae);
            border: 1px solid #ffffff33;
            backdrop-filter: blur(3px);
            border-radius: 0px;
            padding: 10px 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            border-style: outset;
            border-color: transparent;
            animation: fadeIn 1s forwards;
            height: 70px;
            margin: 0 10px 20px 10px;
            border-radius: 10px;
            user-select: none;
        }

        .shadow-top {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 50px;
            background: linear-gradient(to bottom, rgba(54, 52, 82, 0.7), transparent);
            z-index: 1;
        }

        @media (max-width: 768px) {
            .toolbar {
                width: 90%;
            }

            .app {
                width: 50px;
                height: 50px;
            }

            .app p {
                font-size: 10px;
            }
        }

        .apps-toolbar {
            animation: appsToolbarFadeIn 1s forwards;
        }

        .info-toolbar {
            margin-right: 15px;
        }

        @keyframes backgroundFadeIn {
            from {
                filter: blur(5px);
            }

            to {
                filter: blur(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                filter: blur(10px);
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                filter: blur(0);
                transform: scale(1);
            }
        }

        @keyframes appsToolbarFadeIn {
            from {
                width: 70%;
                opacity: 0;
                filter: blur(10px);
            }

            to {
                width: 70%;
                opacity: 1;
                filter: blur(0);
            }
        }

        .info-toolbar { padding: 0; height: auto; }

        .time {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            text-align: right;
            margin: 0;
            height: 55px;
            border-radius: 10px;
            transition: 0.25s ease;
            text-align: left;
            padding: 10px;
            height: 65px;
        }

        .time:hover {
            background: #413b5fae;
            cursor: pointer;
        }

        .time:active {
            background-color: #1c1929ae;
        }

        .time:active span {
            color: #acacac;
        }

        svg {
            transition: 0.25s ease;
        }

        svg:hover {
            cursor: pointer;
        }

        svg:active {
            color: #808080;
            transform: scale(0.9);
        }

        .time span {
            margin-right: 10px;
            margin-left: 10px;
            transition: 0.25s ease;
        }

        .widgets {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .widgets svg {
            margin: 10px;
        }

        .widgets svg:nth-child(1) {
            margin-left: 15px;
        }

        .apps {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;
        }

        .align-left,
        .align-right {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .align-left {
            margin-right: auto;
        }

        .align-right {
            margin-left: auto;
            margin-right: -10px;
        }

        .apps-toolbar input {
            background-color: #1c1929ae;
            border-radius: 100px;
            border-style: solid;
            border-width: 1px;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-color: #3c4492;
            color: #FFF;
            padding: 2.5px;
            -webkit-text-stroke: #121212d5;
            width: 10vw;
            margin-left: 10px;
        }

        .app {
            background-color: transparent;
            padding: 5px;
            width: 55px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
            cursor: pointer;
            transition: 0.25s ease;
            margin: 5px;
        }

        .app:hover {
            background-color: #393355ae;
        }

        .app img,
        .app svg {
            width: 40px;
            margin: 2.5px;
            border-radius: 5px;
        }

        .app:active {
            background-color: #655e80ae;
            transform: scale(0.9);
        }
    </style>
</head>

<body>
    <div class="bg">
        <div id="particles-js"></div>
        <div class="shadow-top"></div>

        <div class="clock">
            <span id="clock"></span>
            <span id="date">January 26th, 2025</span>
        </div>


        <div class="bottom">
            <div class="toolbar info-toolbar">
                <div class="time align-left">
                    <span id="small-clock"></span>
                    <span id="small-date"></span>
                </div>
            </div>
            <div class="toolbar apps-toolbar" style="display: flex; justify-content: center; align-items: center;">
                <div class="align-left">
                    <div class="apps">
                        <div class="app">
                            <img src="./assets/ethereal.png" alt="">
                        </div>
                    </div>
                    <input type="text">
                </div>
                <div class="align-right">
                    <div class="apps">
                        <div class="app">
                            <img src="./assets/chrome.png" alt="">
                        </div>
                        <div class="app">
                            <img src="./assets/vsc.png" alt="">
                        </div>
                        <div class="app">
                            <img src="./assets/discord.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="toolbar widgets-toolbar">
                <div class="widgets">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="lucide lucide-bell">
                        <path d="M10.268 21a2 2 0 0 0 3.464 0" />
                        <path
                            d="M3.262 15.326A1 1 0 0 0 4 17h16a1 1 0 0 0 .74-1.673C19.41 13.956 18 12.499 18 8A6 6 0 0 0 6 8c0 4.499-1.411 5.956-2.738 7.326" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="lucide lucide-gamepad-2">
                        <line x1="6" x2="10" y1="11" y2="11" />
                        <line x1="8" x2="8" y1="9" y2="13" />
                        <line x1="15" x2="15.01" y1="12" y2="12" />
                        <line x1="18" x2="18.01" y1="10" y2="10" />
                        <path
                            d="M17.32 5H6.68a4 4 0 0 0-3.978 3.59c-.006.052-.01.101-.017.152C2.604 9.416 2 14.456 2 16a3 3 0 0 0 3 3c1 0 1.5-.5 2-1l1.414-1.414A2 2 0 0 1 9.828 16h4.344a2 2 0 0 1 1.414.586L17 18c.5.5 1 1 2 1a3 3 0 0 0 3-3c0-1.545-.604-6.584-.685-7.258-.007-.05-.011-.1-.017-.151A4 4 0 0 0 17.32 5z" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="lucide lucide-layout-grid">
                        <rect width="7" height="7" x="3" y="3" rx="1" />
                        <rect width="7" height="7" x="14" y="3" rx="1" />
                        <rect width="7" height="7" x="14" y="14" rx="1" />
                        <rect width="7" height="7" x="3" y="14" rx="1" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="lucide lucide-settings">
                        <path
                            d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z" />
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS("particles-js", {
            "particles": {
                "number": {
                    "value": 100,
                    "density": {
                        "enable": true,
                        "value_area": 800
                    }
                },
                "color": {
                    "value": "#ffffff"
                },
                "shape": {
                    "type": "circle",
                    "stroke": {
                        "width": 0,
                        "color": "#000000"
                    }
                },
                "opacity": {
                    "value": 0.5,
                    "random": true,
                    "anim": {
                        "enable": false
                    }
                },
                "size": {
                    "value": 5,
                    "random": true,
                    "anim": {
                        "enable": false
                    }
                },
                "line_linked": {
                    "enable": false
                },
                "move": {
                    "enable": true,
                    "speed": 5,
                    "direction": "none",
                    "random": true,
                    "straight": false,
                    "out_mode": "out",
                    "bounce": false
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": {
                        "enable": true,
                        "mode": "grab"
                    },
                    "onclick": {
                        "enable": true,
                        "mode": "push"
                    },
                    "resize": true
                },
                "modes": {
                    "repulse": {
                        "distance": 100, // Distance within which particles repulse
                        "duration": 1  // Duration of the repulsion effect
                    },
                    "push": {
                        "particles_nb": 4
                    }
                }
            },
            "retina_detect": true
        });

    </script>
    <script src="./js/clock.js"></script>
</body>

</html>